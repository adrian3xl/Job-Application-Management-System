@model IEnumerable<JobApp_Web_.Models.VacancyVM>

@{
    ViewData["Title"] = "Manage Vacancies";
}

<h1>Vacancy View</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"> <i class="fa fa-plus" aria-hidden="true"></i> Create New Vacancy</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
            Job Title
            </th>
           
            <th>
               Company
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Job_title)
            </td>
        
            <td>
                @Html.DisplayFor(modelItem => item.Employer.Company_name)
            </td>
            <td>
                <a asp-action="Edit"  class="btn btn-warning" asp-route-id="@item.Id"> <i class="fa fa-pencil" aria-hidden="true"></i> </a> |
                <a asp-action="Details"  class="btn btn-secondary" asp-route-id="@item.Id"> <i class="fa fa-book" aria-hidden="true"></i> </a> |
                <a asp-action="Delete"  class="btn btn-danger" asp-route-id="@item.Id"  onclick="return confirm('Are you sure you that you want to delete this resume')"> <i class="fa fa-trash" aria-hidden="true"></i> </a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts{ 

    <script>

        $(document).ready( function () {
            $('#tblData').DataTable();
        } );


    </script>

}
