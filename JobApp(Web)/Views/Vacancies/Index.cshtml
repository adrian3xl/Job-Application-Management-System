@model IEnumerable<JobApp_Web_.Models.VacancyVM>

@{
    ViewData["Title"] = "Manage Vacancies";
}

<h1>Vacancy View</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"> <i class="fa fa-plus" aria-hidden="true"></i> Create New Vacancy</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Job_title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job_Discription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job_Requirements)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job_level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employment_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Submit_deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job_category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Job_title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job_Discription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job_Requirements)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job_level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employment_type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Submit_deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job_category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employer.Id)
            </td>
            <td>
                <a asp-action="Edit"  class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details"  class="btn btn-secondary" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete"  class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts{ 

    <script>

        $(document).ready( function () {
            $('#tblData').DataTable();
        } );


    </script>

}
